<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

    <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/avatarSize"
            android:layout_height="@dimen/avatarSize"
            android:layout_marginStart="@dimen/avatarMarginToScreenEdge"
            android:layout_marginEnd="@dimen/avatarMarginToMessage"
            android:contentDescription="@string/avatarDescription"
            android:layout_gravity="bottom" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/messagePaddingToAvatar"
            android:paddingEnd="@dimen/messagePaddingToScreenEdge">

        <TextView
                android:id="@+id/lblSender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/messageMarginBottom"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/senderPadding"
                android:paddingEnd="@dimen/senderPadding"
                android:text="@string/senderNameSample"
                android:textColor="@color/pale"
                android:textSize="@dimen/supportingTextSize" />

        <TextView
                android:id="@+id/lblMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/messageMarginBottom"
                android:gravity="center_vertical"
                android:text="@string/messageTextSample"
                android:textSize="@dimen/messageTextSize"
                android:layout_gravity="start"
                android:background="@drawable/rounded_background_left"
                android:textColor="@color/pusherPurpleDark" />

    </LinearLayout>

</LinearLayout>
